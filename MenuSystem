Scanner MenuInput = new Scanner(System.in);
        System.out.println("Enter Your Selection >>");
        int MenuSlection1 =MenuInput.nextInt();
        
        int MenuSelection=MenuSlection1;
        Products p = new Products();
            
        switch(MenuSelection)
        {
            case 1:
                p.CaptureProduct();
                break;
            case 2:
                p.SearchProducts();
                break;
                
            case 3:
                p.UpdateProducts();
                break;
                
            case 4:
                p.DeleteProducts();
                break;
                
                
            case 5:
                p.PrintReport();
                break;
                
            case 6:
                p.ExitApplication();
                break;
            
            default:  System.out.println("Enter (6) to Exit Application");
        }
